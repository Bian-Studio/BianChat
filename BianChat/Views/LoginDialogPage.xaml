<UserControl x:Class="BianChat.Views.LoginDialogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BianChat.Views"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <TextBlock FontSize="18" FontWeight="SemiBold">用户名</TextBlock>
        <TextBox x:Name="Username" Width="80" Margin="0 10 0 0"/>
        <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0 5 0 0">密码</TextBlock>
        <PasswordBox x:Name="Password" Width="80" Margin="0 10 0 0" PasswordChar="*"/>
    </StackPanel>
</UserControl>
