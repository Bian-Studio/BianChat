<Window x:Class="BianChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:BianChat"
        x:Name="Window"
        mc:Ignorable="d"
        Title="BianChat" Width="800" Height="450">

    <Grid>

        <ui:NavigationView PaneDisplayMode="Top"
                           IsSettingsVisible="False" IsBackButtonVisible="Collapsed">
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="账户" Icon="Contact"/>
                <ui:NavigationViewItem Content="设置" Icon="Setting"/>
            </ui:NavigationView.FooterMenuItems>
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="主页" Icon="Home"/>
                <ui:NavigationViewItem Content="聊天" Icon="LeaveChat"/>
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </Grid>
</Window>
