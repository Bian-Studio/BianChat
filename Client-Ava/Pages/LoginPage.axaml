<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client_Ava.Pages.LoginPage">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
				Orientation="Vertical">
		<TextBlock FontWeight="Bold" FontSize="35"
				   HorizontalAlignment="Center" VerticalAlignment="Center">BianChat</TextBlock>
		<StackPanel Orientation="Vertical" Margin="0 20 0 0" Width="170">
			<TextBlock FontSize="20">用户名</TextBlock>
			<TextBox x:Name="Username" FontSize="20" Margin="0 10 0 0"
					 FontFamily="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>

			<TextBlock FontSize="20" Margin="0 10 0 0">服务器</TextBlock>
			<ui:ComboBox Margin="0 10 0 0" SelectedIndex="1" x:Name="ServerSelectionComboBox"
						 VerticalContentAlignment="Center">
				<ui:ComboBox.Items>
					<ui:ComboBoxItem Content="本地服" Tag="127.0.0.1:911"/>
					<ui:ComboBoxItem Content="测试服" IsSelected="True"
								  Tag="test.biannetwork.top:5000"/>
				</ui:ComboBox.Items>
			</ui:ComboBox>
			<ui:Button Margin="0 20 0 0" HorizontalAlignment="Right"
					   Content="连接" Classes="accent" Click="ConnectButton_Clicked"/>
		</StackPanel>
	</StackPanel>
</UserControl>
