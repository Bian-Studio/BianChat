<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ui="using:FluentAvalonia.UI.Controls"
		xmlns:pages="clr-namespace:Client_Ava.Pages"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Width="800" Height="450"
        x:Class="Client_Ava.MainWindow"
        Title="Client_Ava" CanResize="False">
	<SplitView DisplayMode="Inline" IsPaneOpen="True" OpenPaneLength="250">
		<SplitView.Pane>
			<ui:Frame x:Name="Login"/>
		</SplitView.Pane>
		<SplitView.Content>
			<StackPanel HorizontalAlignment="Left"
						VerticalAlignment="Bottom">
				<ListBox x:Name="ChatListBox" Margin="0 0 0 5"/>
				<StackPanel Orientation="Horizontal">
					<TextBox x:Name="SendTextBox" Margin="10 0 0 10" Width="460" IsEnabled="False" FontFamily="得意黑	"/>
					<Button Margin="15 0 0 10" Classes="accent" IsEnabled="False" x:Name="accent_button"
							Click="SendButton_Clicked">发送</Button>
				</StackPanel>
			</StackPanel>
		</SplitView.Content>
	</SplitView>
</Window>
