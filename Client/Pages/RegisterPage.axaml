<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:Class="Client.Pages.RegisterPage">
	<Grid>
		<Button HorizontalContentAlignment="Left" VerticalAlignment="Top"
				Margin="15 15 0 0" Click="BackButton_Click">
			<ui:SymbolIcon Symbol="Back"/>
		</Button>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
			Orientation="Vertical">
			<TextBlock FontWeight="Bold" FontSize="35"
					   HorizontalAlignment="Center" VerticalAlignment="Center">BianChat</TextBlock>
			<StackPanel Orientation="Vertical" Margin="0 20 0 0" Width="170">
				<TextBlock FontSize="20">用户名</TextBlock>
				<TextBox x:Name="Username" FontSize="20" Margin="0 10 0 0"
						 FontFamily="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>
				<TextBlock FontSize="20" Margin="0 10 0 0">密码</TextBlock>
				<TextBox x:Name="Password" FontSize="20" Margin="0 10 0 0" PasswordChar="*"
						 FontFamily="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>
				<Button Margin="0 20 0 20" HorizontalAlignment="Right"
						   Content="注册" Classes="accent" Click="RegisterButton_Clicked"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
